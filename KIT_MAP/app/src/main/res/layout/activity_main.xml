<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcffb6"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/room_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/marukado"
        android:visibility="invisible">
        <TextView
            android:id="@+id/room_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/room_info"
            android:text="info"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/go_to_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go_to_room"
            android:text="ここにいく"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|bottom">
    </LinearLayout>
    <com.example.a81809.kit_map.Road
        android:id="@+id/my_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/room_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/room_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/room_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</FrameLayout>